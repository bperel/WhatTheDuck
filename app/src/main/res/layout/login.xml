<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

	<LinearLayout
		android:id="@+id/login_form"
		android:visibility="invisible"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/offlineMode"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textAlignment="center"
			android:gravity="center"
			android:background="#f09313"
			android:textColor="@android:color/white"
			android:visibility="gone"
			android:text="La connexion à votre compte DucksManager a échoué, vérifiez que votre connexion Internet est active. Vous pourrez consulter votre collection hors-ligne une fois que votre collection sera synchronisée."
			/>

		<EditText
			android:id="@+id/username"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/username"
			android:inputType="text">

			<requestFocus/>
		</EditText>

		<EditText
			android:id="@+id/password"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/password"
			android:inputType="textPassword"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Button
				android:id="@+id/login"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/login"/>

			<Button
				android:id="@+id/end_signup"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/signup"/>

		</LinearLayout>

		<TextView
			android:id="@+id/linkToDM"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:text="@string/link_to_ducksmanager_website"/>
	</LinearLayout>

	<ProgressBar
		android:id="@+id/progressBar"
		android:layout_width="40dp"
		android:layout_height="48dp"
		android:layout_centerInParent="true"
		android:layout_gravity="center"
		android:indeterminate="true"
		android:visibility="gone"/>

</RelativeLayout>
