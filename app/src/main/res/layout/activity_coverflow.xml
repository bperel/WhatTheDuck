<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.ducksmanager.util.CoverFlowActivity">

    <ImageSwitcher
        android:id="@+id/imageSwitcherCountryBadge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" >
    </ImageSwitcher>

    <TextSwitcher
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"/>

    <it.moondroid.coverflow.components.ui.containers.FeatureCoverFlow
        android:id="@+id/coverflow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        coverflow:coverHeight="@dimen/cover_height"
        coverflow:coverWidth="@dimen/cover_width"
        coverflow:maxScaleFactor="1.5"
        coverflow:reflectionGap="0px"
        coverflow:rotationThreshold="0.5"
        coverflow:scalingThreshold="0.5"
        coverflow:spacing="0.9" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="72dp"
        android:layout_alignParentBottom="true" >
        <ImageSwitcher
            android:id="@+id/issuecondition"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dip"
            android:layout_marginEnd="2dip"
            android:contentDescription="@+id/issuecondition_description" />
        <TextView
            android:text="1st Page View"
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <TextSwitcher
        android:id="@+id/resultNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true" />

</RelativeLayout>